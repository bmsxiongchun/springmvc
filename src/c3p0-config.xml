<?xml version="1.0" encoding="UTF-8" ?>
<c3p0-config>
    <!-- c3p0有两种配置方式，一种是默认的default-config，一种是按名字区分：named-config需要添加一个属性值name -->
    <named-config name="mysql">
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/ssm?characterEncoding=utf8&amp;serverTimezone=UTC&amp;allowMultiQueries=true</property>
        <property name="driverClass">com.mysql.jdbc.Driver</property>
        <property name="user">root</property>
        <property name="password">root</property>

        <property name="acquireIncrement">3</property>
        <property name="initialPoolSize">10</property>
        <property name="minPoolSize">2</property>
        <property name="maxPoolSize">10</property>
    </named-config>
</c3p0-config>